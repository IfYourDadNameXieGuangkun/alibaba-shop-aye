<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aye.commons.mapper.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.aye.commons.domain.Product">
        <id column="id" property="id" />
        <result column="c_product_name" property="productName" />
        <result column="c_sku" property="sku" />
        <result column="c_image" property="image" />
        <result column="i_shelve" property="shelve" />
        <result column="i_status" property="status" />
        <result column="price" property="price" />
        <result column="d_shelve_time" property="shelveTime" />
        <result column="d_create_time" property="createTime" />
        <result column="d_modified_time" property="modifiedTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, c_product_name, c_sku, c_image, i_shelve, i_status, price, d_shelve_time, d_create_time, d_modified_time
    </sql>

</mapper>
